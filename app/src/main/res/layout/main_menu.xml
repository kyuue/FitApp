<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/logo_foreground" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/goToEgitmenEkleButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Eğitmen Ekle"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/goToBesinEkleButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="Besin Ekle"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/goToEgitmenSec"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:text="Eğitmen Seç"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToEgitmenEkleButton"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/goToKaloriHesaplaButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:text="Kalori Hesapla"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToBesinEkleButton"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/goToVucutKitleIndeksiHesaplaButton"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            android:text="Vücut Kitle İndeksi Hesapla"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToEgitmenSec"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>